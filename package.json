{
    "name": "@bojit/svelte-components",
    "private": false,
    "version": "2.1.0",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && npm run package",
        "preview": "vite preview",
        "package": "svelte-kit sync && svelte-package && publint",
        "prepublishOnly": "npm run package",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check ."
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        },
        "./icons": {
            "types": "./dist/components/icons/index.d.ts",
            "svelte": "./dist/components/icons/index.js"
        },
        "./tailwind": {
            "types": "./dist/themes/tailwind.d.ts",
            "default": "./dist/themes/tailwind.js"
        },
        "./themes/*.css": "./dist/themes/*.css"
    },
    "peerDependencies": {
        "@sveltejs/kit": "^2.0.0",
        "svelte": "^5.0.0"
    },
    "dependencies": {
        "@fontsource/comfortaa": "^5.1.0",
        "@fontsource/gloria-hallelujah": "^5.1.1",
        "@fontsource/handlee": "^5.1.1",
        "@fontsource/indie-flower": "^5.1.1",
        "@fontsource/jetbrains-mono": "^5.1.1",
        "@fontsource/montserrat": "^5.1.0",
        "@fontsource/nunito": "^5.1.1",
        "@fontsource/syne-mono": "^5.1.1",
        "@types/w3c-web-serial": "^1.0.7",
        "@xterm/addon-fit": "^0.10.0",
        "@xterm/addon-webgl": "^0.18.0",
        "@xterm/xterm": "^5.5.0",
        "autoprefixer": "^10.4.20",
        "carbon-icons-svelte": "^12.13.0",
        "clsx": "^2.1.1",
        "lucide-svelte": "^0.469.0",
        "mode-watcher": "^0.5.0",
        "svelte-sonner": "^0.3.28",
        "tailwind-merge": "^2.6.0",
        "tailwind-variants": "^0.3.0",
        "tailwindcss": "^3.4.9",
        "tailwindcss-animate": "^1.0.7",
        "webgl-plot": "^0.7.2"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "^3.0.0",
        "@sveltejs/adapter-static": "^3.0.8",
        "@sveltejs/kit": "^2.0.0",
        "@sveltejs/package": "^2.0.0",
        "@sveltejs/vite-plugin-svelte": "^4.0.0",
        "bits-ui": "^1.0.0-next.76",
        "mdsvex": "^0.11.2",
        "prettier": "^3.3.2",
        "prettier-plugin-svelte": "^3.2.6",
        "prettier-plugin-tailwindcss": "^0.6.5",
        "publint": "^0.2.0",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^5.4.11"
    }
}
